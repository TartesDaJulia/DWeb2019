extends layout

block content

    div(class="w3-container w3-content" style="max-width:1400px;margin-top:80px")
        div.w3-row
            div(class="w3-col m3") //left column
                div(class="w3-card w3-round w3-white")
                    .w3-container
                    h4.w3-center My Profile
            div(class="w3-col m7") //middle column
                div(class="w3-row-padding")
                    div(class="w3-col m12")
                        div(class="w3-card w3-round w3-white")
                            div(class="w3-container w3-padding")
                                h6(class="w3-opacity") Social Media template by w3.css
                                p(contenteditable="true" class="w3-border w3-padding") Status: Feeling Blue
                                button(type="button" class="w3-button w3-theme") Post 
                        each p in posts
                            div.w3-container.w3-card.w3-white.w3-round.w3-margin
                                img(src="/w3images/avatar2.png" alt="Avatar" class="w3-left w3-circle w3-margin-right" style="width:60px")
                                span.w3-right.w3-opacity=   p.datePosted
                                h4=p.postedBy
                                hr.w3-clear
                                p=p.event.description