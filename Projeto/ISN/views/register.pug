extends layout

block content
  .w3-card-4 
    header.w3-container.w3-green 
      h2(style='margin-left:700px') Registe-se

      form.w3-container(action="/regi" method="post" enctype="multipart/form-data")
        label.w3-cell Nome:
        input.w3-input.w3-cell.w3-border(type="text" name="name")
        label.w3-cell Username:
        input.w3-input.w3-cell.w3-border(type="text" name="username" style='margin-top: 10px')
        label.w3-cell Email:
        input.w3-input.w3-cell.w3-border(type="text" name="mail" style='margin-top: 10px')
        label.w3-cell  Password:
        input.w3-input.w3-cell.w3-border(type="password" name="password" style='margin-top: 10px')
        label.w3-cell Curso:
        input.w3-input.w3-cell.w3-border(type="text" name="course" style='margin-top: 10px')
        label.w3-cell  Tipo de utilizador (teacher/student):
        input.w3-input.w3-cell.w3-border(type="text" name="type" style='margin-top: 10px')
        label.w3-cell  Data de nascimento (aaaa-mm-dd):
        input.w3-input.w3-cell.w3-border(type="text" name="dateOfBirth" style='margin-top: 10px')
        label.w3-cell Avatar:
        input.w3-input.w3-cell(type="file" name="avatar" style='margin-top: 10px')
        input.w3-input(type="submit" value="Submeter") 
    footer.w3-container.w3-green
      address Rede social, Henrique e Maria
