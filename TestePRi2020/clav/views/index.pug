extends layout

block content
  h1 Teste Pri 2020
  h3 Exercício Nº 2: CLAV: Classificação e Avaliação da Informação Pública
  div
    .w3-card-4
    header.w3-container.w3-blue
      h1 Lista de tipologias
    .w3-container
      if (tipologias.length > 0)
        table.w3-table-all
          tr
            th estado
            th sigla
            th designacao
            th id
          each t in tipologias
            tr
              td= t.estado
              td= t.sigla
              td= t.designacao
              td
                a(href="http://localhost:3001/tipo/"+t.id)=t.id
      else
        p Não tem nenhum ficheiro armazenado

